#include <iostream>

using namespace std;

int main() {
  int min = 10e9;
  int max = -10e9;
  int max_diff = -10e9;
  
  
  int n;
  cin >> n; // number of entries

  for (int i = 0; i < n; ++i) {
    int input;
    cin >> input;
    if (input > max) max = input;
    if ((max - min) > max_diff) max_diff = (max - min);
    if (input < min) min = input;
  }

  cout << max_diff << endl;
}
    
      
